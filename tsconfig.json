  {
    "compilerOptions": {
      // File Layout
      "outDir": "dist",

      // Environment Settings
      "module": "ESNext",                 // ✅ Use ESM
      "target": "ES2020",
      "moduleResolution": "Node",         // ✅ For Node ESM resolution
      "esModuleInterop": true,
      "types": ["node", "jest"],                   // ✅ For Node.js and Jest type support
      "lib": ["esnext"],                   // ✅ Modern JS features

      // Other Outputs
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,

      // Stricter Typechecking Options
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,

      // Recommended Options
      "strict": true,
      "jsx": "react-jsx",
      "verbatimModuleSyntax": true,        // ✅ Keep import/export exactly as written
      "isolatedModules": true,
      "noUncheckedSideEffectImports": true,
      "moduleDetection": "force",
      "skipLibCheck": true,

      "baseUrl": "./src",
      "paths": {
        "utils/*": ["utils/*"],
        "service/*": ["service/*"],
        "controller/*": ["controller/*"],
        "config": ["config/index.ts"]
      },
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
  }
